# 环境配置
ENVIRONMENT=development
DEBUG=true

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///data/knowledge_base.db

# GitLab配置
GITLAB_URL=https://gitlab.example.com
GITLAB_TOKEN=your_gitlab_token_here

# Confluence配置
CONFLUENCE_URL=https://company.atlassian.net/wiki
CONFLUENCE_USER=your_username
CONFLUENCE_TOKEN=your_confluence_token

# 同步配置
DOCS_OUTPUT_DIR=packages/docs/docs
AUTO_UPDATE_NAV=true
NAV_SCRIPT_PATH=packages/docs/scripts/update_nav.py

# API配置
API_HOST=0.0.0.0
API_PORT=8080

# MCP配置
MCP_HOST=0.0.0.0
MCP_PORT=9000

# 搜索配置
SEARCH_INDEX_PATH=data/search_index