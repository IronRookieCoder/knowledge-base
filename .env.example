# 环境配置
ENVIRONMENT=development
DEBUG=true

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///data/knowledge_base.db

# GitLab配置
GITLAB_URL=https://gitlab.example.com
GITLAB_TOKEN=your_gitlab_token_here

# Confluence配置
CONFLUENCE_URL=https://company.atlassian.net/wiki
CONFLUENCE_USERNAME=your_username
CONFLUENCE_TOKEN=your_confluence_token

# 同步配置
DOCS_OUTPUT_DIR=packages/docs/docs
AUTO_UPDATE_NAV=true
SYNC_INTERVAL=3600
SYNC_CONFIG_FILE=config/sources.yml
NAV_SCRIPT_PATH=packages/docs/scripts/update_nav.py

# 默认同步配置
GITLAB_DOCS_PATH=docs/
GITLAB_BRANCH=main
DEFAULT_CATEGORY=docs
CONFLUENCE_CATEGORY=confluence
GENERAL_CATEGORY=general

# GitLab项目配置（可选，用于批量配置）
# GITLAB_PROJECT_IDS=123,456,789
# GITLAB_TARGET_PATH=gitlab-docs/

# Confluence空间配置（可选，用于批量配置）
# CONFLUENCE_SPACE_KEYS=DEV,API,PROD
# CONFLUENCE_SPACE_NAMES=开发指南,API文档,产品文档
# CONFLUENCE_TARGET_PATH=confluence-docs/
# CONFLUENCE_INCLUDE_ATTACHMENTS=false

# API配置
API_HOST=0.0.0.0
API_PORT=8080

# MCP配置
MCP_HOST=0.0.0.0
MCP_PORT=9000
MCP_MAX_CONNECTIONS=100

# 搜索配置
SEARCH_INDEX_PATH=data/search_index
CHINESE_ANALYZER=true
MIN_WORD_LEN=1

# 日志配置
LOG_LEVEL=INFO
# LOG_FILE=logs/app.log

# 文件存储配置
DATA_DIR=data
UPLOAD_DIR=data/uploads
MAX_FILE_SIZE=10485760